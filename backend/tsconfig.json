{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@ports/*": ["core/ports/*"],
      "@app/*": ["core/application/*"],
      "@domain/*": ["core/domain/*"],
      "@adapters/*": ["adapters/*"],
      "@infra/*": ["infrastructure/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
