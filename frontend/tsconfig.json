{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@ui/*": ["src/adapters/ui/*"],
      "@infra/*": ["src/adapters/infrastructure/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
